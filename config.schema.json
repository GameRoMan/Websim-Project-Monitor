{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$ref": "#/definitions/Config",
  "definitions": {
    "Config": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "$schema": {
          "type": "string",
          "const": "./config.schema.json"
        },
        "project_id": {
          "type": "string",
          "description": "Project ID to monitor, required"
        },
        "interval": {
          "type": "integer",
          "description": "Interval, recommended ~10s"
        },
        "base_url": {
          "type": "string",
          "format": "uri",
          "description": "Base URL for websim, required if you don't want to have requests sent to localhost"
        },
        "model_id": {
          "type": "string",
          "description": "Model ID, a free model is recommended"
        },
        "additional_note": {
          "type": "string",
          "description": "Additional notes, usually for safety"
        },
        "cookie": {
          "type": "string",
          "description": "Cookies, paste from browser with document.cookie, required to work"
        },
        "auto_response_prefix": {
          "type": "string",
          "description": "Automatic Reponse prefix is checked for if a comment requires processing."
        },
        "auto_response_create_revision": {
          "type": "string",
          "description": "Automatic response when a revision is created, auto_response_prefix is automatically prepended."
        }
      },
      "required": [
        "additional_note",
        "auto_response_create_revision",
        "auto_response_prefix",
        "base_url",
        "cookie",
        "interval",
        "model_id",
        "project_id"
      ],
      "title": "Config"
    }
  }
}
